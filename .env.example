# FastAPI Settings
DEBUG=True
APP_NAME=Hotel Review Analyzer
APP_VERSION=1.0.0

# Server Settings
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
STREAMLIT_PORT=8501

# OTA API Credentials
# 楽天トラベル（スクレイピング使用のため、現状不要）
RAKUTEN_APP_ID=your_rakuten_app_id_here

# じゃらん（スクレイピング使用のため、現状不要）
JALAN_API_KEY=your_jalan_api_key_here

# Booking.com Guest Review API
BOOKING_API_URL=https://distribution-xml.booking.com/2.7/json/reviews
BOOKING_USERNAME=your_booking_username_here
BOOKING_PASSWORD=your_booking_password_here

# Rate Limiting
REQUEST_DELAY_SECONDS=1.0
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2.0

# Data Directories
DATA_DIR=./data
CACHE_DIR=./data/cache
TEMP_DIR=./data/temp
OUTPUT_DIR=./output

# NLP Model Settings
SENTIMENT_MODEL=daigo/bert-base-japanese-sentiment
BATCH_SIZE=32
MAX_LENGTH=512

# Logging
LOG_LEVEL=INFO
LOG_FILE=./data/app.log
