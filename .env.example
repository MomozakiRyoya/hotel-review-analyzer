# Hotel Review Analyzer - Environment Variables
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env file to git

# ==============================================
# Application Settings
# ==============================================
DEBUG=true
USE_DEMO_REVIEWS=true

# ==============================================
# Booking.com API Credentials
# ==============================================
# Get credentials from: https://developers.booking.com/
BOOKING_USERNAME=your_booking_username_here
BOOKING_PASSWORD=your_booking_password_here
BOOKING_ENABLED=false

# ==============================================
# Expedia API Credentials
# ==============================================
# Get credentials from: https://developers.expediagroup.com/
EXPEDIA_API_KEY=your_expedia_api_key_here
EXPEDIA_API_SECRET=your_expedia_api_secret_here
EXPEDIA_ENDPOINT=https://api.expediagroup.com
EXPEDIA_ENABLED=false

# ==============================================
# Agoda API Credentials
# ==============================================
# Get credentials from: https://partners.agoda.com/
AGODA_API_KEY=your_agoda_api_key_here
AGODA_PARTNER_ID=your_agoda_partner_id_here
AGODA_ENDPOINT=https://affiliateapi.agoda.com
AGODA_ENABLED=false

# ==============================================
# Backend Configuration
# ==============================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
STREAMLIT_PORT=8501

# ==============================================
# Security Note
# ==============================================
# For production deployment on Vercel:
# 1. Do NOT commit .env file
# 2. Set environment variables in Vercel dashboard
# 3. Go to: Project Settings > Environment Variables
# 4. Add each variable above with actual values
